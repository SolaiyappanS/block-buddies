{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "games": {
      ".read": "auth !== null",
      "$gameId": {
        ".write": "root.child('games').child($gameId).child('createdBy').val() === auth.uid || !root.child('games').child($gameId).exists()",
        "players": {
          ".read": "auth !== null"
        },
        "gameState": {
          ".read": "auth !== null",
          ".write": "auth !== null"
        }
      }
    }
  }
}